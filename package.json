{

  "name": "express-ws",
  "version": "1.0.0",
  "description": "tdd with express",
  "main": "app.js",
  "scripts": {

    "start": "cross-env NODE_ENV=development nodemon index",
    "test": "cross-env NODE_ENV=test jest --watch --colors --verbose --detectOpenHandles",
    "posttest": "cross-env NODE_ENV=test node test-cleanup",
    "lint": "eslint ."

  },
  "author": "Fred Wills",
  "license": "ISC",
  "dependencies": {

    "bcrypt": "^5.0.1",
    "config": "^3.3.7",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "i18next": "^21.6.10",
    "i18next-fs-backend": "^1.1.4",
    "i18next-http-middleware": "^3.1.6",
    "nodemailer": "^6.7.2",
    "sequelize": "^6.15.0",
    "sqlite3": "^5.0.2",
    "tar": "^4.4.19"

  },
  "devDependencies": {

    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "smtp-server": "^3.9.0",
    "supertest": "^6.2.2"

  },
  "eslintConfig": {

    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "semi": "warn",
      "quotes": [
        "warn",
        "single"
      ],
      "eqeqeq": "warn"
    }

  },
  "jest":{
    "testRunner":"jest-jasmine2",
    "testPathIgnorePatterns":[
      "<rootDir>/node_modules/",
      "<rootDir>/config/"
    ]
  }

}
